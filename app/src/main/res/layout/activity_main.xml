<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Player Container -->
    <LinearLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoDragView="@id/bar">

        <!-- Other Views (everything below the video; the top pane of the SlidingUpPanelLayout) -->
        <RelativeLayout
            android:id="@+id/other_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--This is the orange dot background image in an ImageView to get the scaling right-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/background"
                android:src="@drawable/background_image"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/fetchVideosProgressSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fetching"
                        android:textColor="@color/light_font"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="10"
                        android:shadowDy="10"
                        android:shadowRadius="2"
                        android:textAlignment="center"/>

                    <ProgressBar
                        android:id="@+id/fetchVideosProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        style="@android:style/Widget.ProgressBar.Horizontal" />

                </LinearLayout>

            <me.grantland.widget.AutofitTextView
            android:id="@+id/episodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textSize="30sp"
            autofit:minTextSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="2"
            android:textAlignment="center"
            />

            <TextView
                android:id="@+id/episodeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/light_font"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="2"
                android:textAlignment="center" />

            <Button
                android:id="@+id/ignoreGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ignoreGame"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green">

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <!-- Bar/RecyclerView and Action Bar; the bottom pane of the SlidingUpPanelLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Bar and RecyclerView -->
            <LinearLayout
                android:id="@+id/bar_recyclerView_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Bar -->
                <LinearLayout
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/bar_padding"
                    android:paddingBottom="@dimen/bar_padding"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <!-- The search input bar -->
                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:nextFocusUp="@id/searchEditText"
                        android:nextFocusLeft="@id/searchEditText"
                        android:inputType="text"
                        android:hint="@string/search"
                        android:imeOptions="actionGo"
                        android:maxLines="1">

                    </EditText>
                </LinearLayout>

                <!-- RecyclerView -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="vertical"/>

            </LinearLayout>

            <!-- Action Bar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/target_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:src="@drawable/target"
                    android:background="@null"
                    android:padding="@dimen/button_padding"
                    android:contentDescription="@string/target_button"/>


                <ImageView
                    android:id="@+id/up_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:src="@drawable/arrow_up"
                    android:background="@null"
                    android:padding="@dimen/button_padding"
                    android:contentDescription="@string/up_button"/>

                <ImageView
                    android:id="@+id/down_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:src="@drawable/arrow_down"
                    android:background="@null"
                    android:padding="@dimen/button_padding"
                    android:contentDescription="@string/down_button"/>
            </LinearLayout>

        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>


</LinearLayout>
